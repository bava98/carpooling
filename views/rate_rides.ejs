<!doctype html>
<html lang="en">

<head>
    <title>Completed Rides</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css"
        href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
    <!-- Material Kit CSS -->
    <link href="assets/css/material-kit.css?v=2.0.5" rel="stylesheet" />
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <!--can change color by changing the bg-danger-->
    <nav class="navbar fixed-top navbar-expand-lg bg-danger" color-on-scroll="100">
        <div class="container">
            <div class="navbar-translate">
                <a class="navbar-brand" href="/navbar"><strong>GrabCab</strong></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="navbar-toggler-icon"></span>
                    <span class="navbar-toggler-icon"></span>
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    <li
                        <a class="nav-link" href="/filter_rides">FindRide</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/update_bids">Pending</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/rate_rides">Completed <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/profile_passenger">Profile</a>
                    </li>
                    <li class="nav-item dropdown">
                        <form class="form-inline ml-auto" method="POST">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Setting
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <button type="submit" class="dropdown-item" formaction="/logout">Logout</button>
                            </div>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="page-body">
        <div class="container">
            <div class="card card-nav-tabs">
                <form class="form" method="POST" action="rate_rides">
                    <div class="card-header card-header-danger">
                        <strong>Rate your rides!</strong>
                    </div>
                    <div class="card-body">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <input type="text" class="form-control" id="rideid" name="rideid"
                                    placeholder="Ride ID...">
                            </div>
                            <div class="form-group col-md-6">
                                <input type="text" class="form-control" id="platenumber" name="platenumber"
                                    placeholder="Plate Number...">
                            </div>
                            <div class="form-group col-md-6">
                                <input type="number" min="1" max="5" class="form-control" id="score" name="score"
                                    placeholder="Input a score from 1 to 5...">
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-round">Rate!</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <h1><%= title%></h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Ride ID</th>
                <th scope="col">Origin</th>
                <th scope="col">Destination</th>
                <th scope="col">Date</th>
                <th scope="col">Time</th>
                <th scope="col">Plate Number</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody>
            <% for(var i=0; i<data.length; i++) { %>
            <tr>
                <td><%= data[i].rideid%></td>
                <td><%= data[i].rideorigin%></td>
                <td><%= data[i].ridedestination%></td>
                <td><%= data[i].ridedate%></td>
                <td><%= data[i].ridetime%></td>
                <td><%= data[i].rideplatenumber%></td>
                <td><%= data[i].ridecurrentprice%></td>
            </tr>
            <% } %>
        </tbody>
    </table>
    <!--   Core JS Files   -->
    <script src="assets/js/core/jquery.min.js" type="text/javascript"></script>
    <script src="assets/js/core/popper.min.js" type="text/javascript"></script>
    <script src="assets/js/core/bootstrap-material-design.min.js" type="text/javascript"></script>
    <script src="assets/js/plugins/moment.min.js"></script>
    <!--	Plugin for the Datepicker, full documentation here: https://github.com/Eonasdan/bootstrap-datetimepicker -->
    <script src="assets/js/plugins/bootstrap-datetimepicker.js" type="text/javascript"></script>
    <!--  Plugin for the Sliders, full documentation here: http://refreshless.com/nouislider/ -->
    <script src="assets/js/plugins/nouislider.min.js" type="text/javascript"></script>
    <!--  Google Maps Plugin  -->
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE"></script>
    <!-- Place this tag in your head or just before your close body tag. -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <!-- Control Center for Material Kit: parallax effects, scripts for the example pages etc -->
    <script src="assets/js/material-kit.js?v=2.0.5" type="text/javascript"></script>
</body>

</html>